<div id="addPodcastToScheduleModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addPodcastModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="addPodcastModalLabel">Add Podcast to Schedule</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-6 p-2">
                            <lable>Podcast</lable>
                            <select name="podcastName" id="podcastName" class="custom-select">
                                <!-- generate by javascript -->
                            </select>
                        </div>
                        <div class="col-lg-6 p-2">
                            <lable>Channel</lable>
                            <select name="channelNumber" id="channelNumber" class="custom-select">
                               <option val="1">1</option>
                               <option val="2">2</option>
                            </select>
                        </div>
                        <div class="col-lg-6 p-2">
                            <lable>Date</lable>
                            <input class="form-control" type="date"
                            placeholder="Select Date..."
                            id="scheduleDate" name="scheduleDate">
                        </div>
                        <div class="col-lg-6 p-2">
                            <lable>Start Time</lable>
                            <input class="form-control" type="text"
                            placeholder="Select Date..."
                            id="scheduleStartTime" name="scheduleStartTime" data-mask="99:99:99">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">
                    Close
                </button>
                <button id="addPodcastSchedule" type="button" class="btn btn-primary waves-effect waves-light">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>